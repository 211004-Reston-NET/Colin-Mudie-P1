@using Microsoft.AspNetCore.Identity
@using Models

@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <!-- Left Navbar -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="StoreFront" asp-action="Index">Locations</a>
        </li>

    </ul>
    <!-- Right Navbar -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item ">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    </ul>
}

