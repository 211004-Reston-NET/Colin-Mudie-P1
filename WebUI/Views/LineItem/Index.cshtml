@{
}
@model IEnumerable<WebUI.Models.LineItemVM>

<h1>List of Products</h1>
<br />
<button class="btn btn-secondary">@Html.ActionLink("Back", "Index", "StoreFront", new { },  new { @style = "color: white;" })</button>
<button class="btn btn-secondary">@Html.ActionLink("View Previous Orders", "OrderList", "StoreFront", new { p_id = Model.ElementAt(0).StoreFrontId}, new { @style = "color: white;" })</button>
<br />
<br />
<table class="table table-striped table-hover">
    <tr>
        <th></th>
        <th>Quantity</th>
        <th>Name</th>
        <th>Price</th>
        <th>Brand</th>
        <th>Category</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (LineItemVM item in Model)
    {
        <tr>
            <td><button class="btn btn-primary">@Html.ActionLink("Buy", "Index", "Order", new { p_storeId = item.StoreFrontId, p_lineItemId = item.LineItemId }, new { @style = "color: white;" })</button></td>
            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            <td>@Html.DisplayFor(modelItem => item.Brand)</td>
            <td>@Html.DisplayFor(modelItem => item.Category)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td><button class="btn btn-secondary">@Html.ActionLink("Edit Stock", "Edit", new { p_id = item.LineItemId }, new { @style = "color: white;" })</button></td>
        </tr>
    }
</table>